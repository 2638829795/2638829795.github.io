<form name="form_save" method="post"
	action="index.php?c=app&a=superadmin:index&s=save&os={$_G['GET']['S']}&ot={$_G['GET']['T']}&table=set">
	<div class="pk-row pk-padding-bottom-15 pk-margin-bottom-15" style="border-bottom:solid 1px #458fce">
		<label class="pk-w-sm-3 pk-padding-top-5 pk-text-bold pk-text-right pk-text-primary">文章搜索 应用设置</label>
		<div class="pk-w-sm-8"></div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">应用开关</label>
		<div class="pk-w-sm-8">
			<select class="pk-textbox" data-value="{$_G['SET']['APP_PUYUETIAN_SEARCH_LOAD']}"
				name="app_puyuetian_search_load">
				<option value="0">关闭</option>
				<option value="embed">开启</option>
			</select>
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">结果排序方式</label>
		<div class="pk-w-sm-8">
			<select class="pk-textbox" data-value="{$_G['SET']['APP_PUYUETIAN_SEARCH_ORDERTYPE']}"
				name="app_puyuetian_search_ordertype">
				<option value="like">相关度优先</option>
				<option value="posttime">最新发布优先</option>
				<option value="activetime">最近被回复优先</option>
			</select>
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">显示搜索框</label>
		<div class="pk-w-sm-8">
			<select class="pk-textbox" data-value="{$_G['SET']['APP_PUYUETIAN_SEARCH_SHOWINPUTBOX']}"
				name="app_puyuetian_search_showinputbox">
				<option value="0">关闭</option>
				<option value="1">开启</option>
			</select>
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">搜索首页搜索热词</label>
		<div class="pk-w-sm-8">
			<input class="pk-textbox _labelsbox" type="text" name="app_puyuetian_search_hotwords"
				value="{$_G['SET']['APP_PUYUETIAN_SEARCH_HOTWORDS']}" placeholder="请输入关键词">
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">搜索首页LOGO地址</label>
		<div class="pk-w-sm-8">
			<input type="text" class="pk-textbox" name="app_puyuetian_search_logourl"
				value="{$_G['SET']['APP_PUYUETIAN_SEARCH_LOGOURL']}" placeholder="填写LOGO链接地址" style="padding-left:44px">
			<img id="forumLogo" src="{$_G['SET']['APP_PUYUETIAN_SEARCH_LOGOURL']}"
				style="position:absolute;width:36px;height:36px;top:1px;left:16px;border-radius:2px;cursor:pointer"
				title="上传LOGO"
				onerror="this.src='data:image/png;base64,'" />
		</div>
		<div class="pk-w-sm-1"></div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">每页显示条数</label>
		<div class="pk-w-sm-8">
			<input class="pk-textbox" type="number" name="app_puyuetian_search_showcount"
				value="{$_G['SET']['APP_PUYUETIAN_SEARCH_SHOWCOUNT']}">
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">不被搜索的版块id</label>
		<div class="pk-w-sm-8">
			<input class="pk-textbox _labelsbox" type="text" name="app_puyuetian_search_nobkids"
				value="{$_G['SET']['APP_PUYUETIAN_SEARCH_NOBKIDS']}" placeholder="请输入版块id">
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext"></label>
		<div class="pk-w-sm-8">
			<button type="button" id="SubmitBtn">保存</button>
			<a id="searchIndex" target="_blank" href="javascript:;" class="pk-btn pk-btn-success">搜索首页</a>
		</div>
	</div>
</form>
<script>
	$(function() {
		// 搜索首页
		$('#searchIndex').on('click', function() {
			if (parseInt($_SET['REWRITEURL'])) {
				window.open('search--1.html', '_blank');
			} else {
				window.open('index.php?c=app&a=puyuetian_search', '_blank');
			}
		});
		//上传图片
		$('#forumLogo').on('click', function() {
			var me = $(this);
			uploadImage($(this).prev(), function(url) {
				me.attr('src', url);
			});
		});
	});
</script>
